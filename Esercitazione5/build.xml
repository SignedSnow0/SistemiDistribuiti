<project name="Esercitazione5" basedir=".">
    <property name="src" location="src"/>
    <property name="build" location="build"/>

    <presetdef name="javac">
        <javac includeantruntime="false"/>
    </presetdef>

    <target name="build">
        <mkdir dir="${build}"/>
        <javac srcdir="${src}" destdir="${build}"/>
    </target>

    <target name="run-server" depends="build">
        <java dir="${basedir}" fork="true" classname="FtpServer">
            <classpath>
                <pathelement location="${build}"/>
            </classpath>
            <arg value="1099"/>
        </java>
    </target>

    <target name="run-client" depends="build">
        <java dir="${basedir}" fork="true" classname="FtpClient">
            <classpath>
                <pathelement location="${build}"/>
            </classpath>
            <arg value="1099"/>
        </java>
    </target>
</project>
